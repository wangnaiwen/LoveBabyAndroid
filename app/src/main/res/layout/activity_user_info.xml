<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a9f4f2f2">
    <RelativeLayout
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorIconSelected"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/user_info_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clip_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个人信息设置"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:gravity="center"/>
        <TextView
            android:id="@+id/save_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="保存"
            android:textSize="18sp"
            android:textColor="#ffff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_info_nickname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffff"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="昵称"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/img_nickname"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mine_entry_img"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/dis_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/img_nickname"/>
    </RelativeLayout>
    <include layout="@layout/divider_line"/>
    <RelativeLayout
        android:id="@+id/user_info_birthday"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="生日"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/img_birthday"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mine_entry_img"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/dis_birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/img_birthday"/>
    </RelativeLayout>
    <include layout="@layout/divider_line"/>
    <RelativeLayout
        android:id="@+id/user_info_sex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="性别"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mine_entry_img"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/dis_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="男"
            android:layout_toLeftOf="@id/img_sex"/>
    </RelativeLayout>
    <include layout="@layout/divider_line"/>
    <RelativeLayout
        android:id="@+id/user_info_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="邮箱"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mine_entry_img"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>
    <include layout="@layout/divider_line"/>
    <RelativeLayout
        android:id="@+id/user_info_hobby"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="兴趣"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mine_entry_img"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>
    <include layout="@layout/divider_line"/>
    <RelativeLayout
        android:id="@+id/user_info_signature"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="个性签名"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mine_entry_img"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>
</LinearLayout>