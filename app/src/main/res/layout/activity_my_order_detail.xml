<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorIconSelected"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/back_my_order_detail"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clip_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单详情"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="#f2eded">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:background="#ffff"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:text="订单状态"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="8dp"/>
                <TextView
                    android:id="@+id/tv_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="待支付"
                    android:paddingRight="8dp"
                    android:textColor="@color/btn_color_yes"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="订单号:12345672345674544456"
                android:gravity="center_vertical"
                android:background="#ffff"
                android:paddingLeft="8dp" />
            <TextView
                android:id="@+id/tv_order_create_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="创建时间：2017-04-17 12:12:12"
                android:gravity="center_vertical"
                android:background="#ffff"
                android:paddingLeft="8dp" />
            <TextView
                android:id="@+id/tv_order_pay_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="支付时间：2017-04-17 12:12:12"
                android:gravity="center_vertical"
                android:background="#ffff"
                android:paddingLeft="8dp" />
            <TextView
                android:id="@+id/tv_order_finish_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="完成时间：2017-04-17 12:12:12"
                android:gravity="center_vertical"
                android:background="#ffff"
                android:paddingLeft="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="#fff">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:text="小小王"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/tv_order_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="8dp"
                        android:text="15677778888"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_order_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="广西壮族自治区桂林市桂林电子科技大学花江校区"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#ffffff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_ahead"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="商品列表"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <com.wnw.lovebaby.view.costom.OrderListView
                android:id="@+id/lv_order_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#Ffffff">
            </com.wnw.lovebaby.view.costom.OrderListView>
            <TextView
                android:id="@+id/tv_order_all_price"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="#ffff"
                android:textColor="@color/btn_color_yes"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="订单总额：￥0.00"/>

            <TextView
                android:id="@+id/tv_order_pay"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_pay"
                android:textColor="#ffff"
                android:gravity="center"
                android:text="支付"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tv_confirm_receipt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_pay"
                android:textColor="#ffff"
                android:gravity="center"
                android:text="确认收货"
                android:layout_margin="10dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_submit_evaluation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_pay"
                android:textColor="#ffff"
                android:gravity="center"
                android:text="立即评价"
                android:layout_margin="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>