<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorIconSelected"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/back_add_address"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clip_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="添加地址"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:text="收货人:"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/et_add_address_receiver"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:hint="收件人名字"
                    android:textSize="14sp"
                    android:background="@null"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <include layout="@layout/divider_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:text="电    话:"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/et_add_address_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:hint="收件人联系方式"
                    android:textSize="14sp"
                    android:background="@null"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <include layout="@layout/divider_line"/>
            <LinearLayout
                android:id="@+id/pick_address_dialog"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="选择地址"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_advance"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <include layout="@layout/divider_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址："
                    android:paddingLeft="10dp"/>
                <EditText
                    android:id="@+id/et_add_address_house_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:hint="街道和门牌号"
                    android:background="@null"
                    android:paddingRight="10dp"/>
            </LinearLayout>
            <include layout="@layout/divider_line"/>
            <Button
                android:id="@+id/finish_add_address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_btn_default"
                android:layout_margin="10dp"
                android:text="完成"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>