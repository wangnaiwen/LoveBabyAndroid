<?xml version="1.0" encoding="utf-8"?>
<com.wnw.lovebaby.view.costom.GoodsSquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/goods_square_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/grid_line">
        <ImageView
            android:id="@+id/goods_cover_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goods_cover_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:text="宝贝衣柜"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/goods_cover_price"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:textColor="#e10b0b"
                android:text="￥123"
                android:paddingBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>

</com.wnw.lovebaby.view.costom.GoodsSquareLayout>