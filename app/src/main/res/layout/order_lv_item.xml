<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">
    <ImageView
        android:id="@+id/order_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/grid_line"
        android:src="@mipmap/b1"
        android:padding="3dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/order_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="乖宝宝龟宝宝乖宝宝龟宝宝乖乖宝宝龟宝宝乖宝宝龟宝宝乖宝宝龟宝宝宝宝龟宝宝乖宝宝龟宝宝"
            android:maxLines="2"
            android:textSize="12sp"
            android:ellipsize="end"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/order_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥39.09"
                android:textColor="@color/colorIconSelected"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/order_icon_mul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="×"
                android:textSize="18sp"
                android:layout_toRightOf="@id/order_unit_price"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>
            <TextView
                android:id="@+id/goods_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1"
                android:layout_toRightOf="@id/order_icon_mul"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>