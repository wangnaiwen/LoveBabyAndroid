<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/bg_btn_add_address"
    android:layout_margin="5dp">
    <LinearLayout
        android:id="@+id/rece_address"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lv_item_receiver"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:text="王宝宝"
                android:paddingLeft="15dp" />
            <TextView
                android:id="@+id/lv_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:text="15677303333"
                android:paddingRight="15dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/lv_item_address"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="广西 桂林 灵川县 桂林电子科技大学华江校区"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorIconDefault"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/rece_address_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/icon_address_edit"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="编辑" />
        </LinearLayout>
        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorIconDefault"/>
        <LinearLayout
            android:id="@+id/rece_address_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/trash_icon"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="删除" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>