<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/invite_open_shop_title_area"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorIconSelected"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/back_invite_open_shop"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clip_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="邀请开店"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/invite_open_shop_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/open_my_shop"
        android:layout_below="@id/invite_open_shop_title_area"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/btn_invite_open_shop"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="立即邀请"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:textColor="#ffffff"
            android:background="@drawable/bg_btn_default"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
    </RelativeLayout>
</RelativeLayout>