<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/searchbar_height"
        android:background="@color/colorIconSelected"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/search_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clip_back"
            android:clickable="true"/>
        <RelativeLayout
            android:id="@+id/btn_search_bar"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/searchbar_bg"
            android:layout_marginRight="10dp"
            android:descendantFocusability="afterDescendants"
            android:clickable="true">
            <ImageView
                android:id="@+id/search_image_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/index_search_img"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/clear_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_clear"
                android:layout_marginTop="4dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:clickable="true"/>
            <EditText
                android:id="@+id/search_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/search_image_icon"
                android:layout_toLeftOf="@id/clear_search"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:hint="请输入你想要查找的宝贝"
                android:background="@null" />
        </RelativeLayout>
        <TextView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/bg_btn"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>