<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:id="@+id/order_title_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorIconSelected"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/back_order"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clip_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单确认页"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/order_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/grid_line"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/order_text_should_be_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="应付："
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/order_sum_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/colorIconSelected"
            android:text="￥403.04"
            android:layout_toRightOf="@id/order_text_should_be_pay" />
        <TextView
            android:id="@+id/order_to_pay"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_margin="8sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_btn_pay"
            android:textColor="#ffffff"
            android:text="去支付"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@id/order_title_menu"
        android:layout_above="@id/order_pay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#a9e4e3e3">
            <LinearLayout
                android:id="@+id/change_address"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/order_tv_receiver"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="王乃稳"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/order_tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="15677301446"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginLeft="30dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/order_tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="广西 桂林 灵川县 桂林电子科技大学花江校区"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_advance"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pick_address_normal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:background="#ffffff">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="请选择地址"
                    android:textSize="14sp"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_advance"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/order_remark"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:maxLines="1"
                android:hint="备注信息、给商家留言，选填"
                android:paddingLeft="8dp"
                android:background="#ffff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="true"/>

            <RelativeLayout
                android:id="@+id/rl_pick_shop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/icon_ahead"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_ahead"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"/>
                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_advance"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/icon_ahead"
                    android:text="选择店铺"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_dis_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/arrow"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:paddingRight="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#ffffff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_ahead"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="商品列表"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorIconDefault"/>
            <com.wnw.lovebaby.view.costom.OrderListView
                android:id="@+id/order_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#Ffffff">
            </com.wnw.lovebaby.view.costom.OrderListView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>